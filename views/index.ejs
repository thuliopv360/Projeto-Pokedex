<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="img/pokebola.ico" type="image/x-icon">
    <title>Pokedex</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <main>
            <section id="cards">

                <% pokedex.forEach((pokemon) => { %>
                    <a href="/detalhes/<%= pokemon.id %>">

                        <div class="card">
                            <img src="<%= pokemon.imagem %>" alt="">
                            <h2>
                                <%= pokemon.nome%>
                            </h2>
                            <p> Tipo:
                                <span>
                                    <%= pokemon.tipo %>
                                </span>
                            </p>
                            <p> Fraquezas:
                                <span>
                                    <%= pokemon.fraquezas %>
                                </span>
                            </p>
                            <h6>Numero
                                <span>
                                    <%= pokemon.id %>
                                </span>
                            </h6>
                        </div>
                    </a>
                    <%  }) %>
            </section>
            <section id="cadastro">
                <h2>Cadastre um novo Pokemon! </h2>

                <form action="/add" method="post">
                    <label for="id">Numero:</label>
                    <input type="text" id="id" name="id">

                    <label for="nome">Nome: </label>
                    <input type="text" id="nome" name="nome">

                    <label for="descricao">Descricao:</label>
                    <input type="text" id="descricao" name="descricao">

                    <label for="tipo">Tipo:</label>
                    <input type="text" id="tipo" name="tipo">

                    <label for="imagem">Link da imagem:</label>
                    <input type="text" id="imagem" name="imagem">

                    <button id="btnCadastrar" type="submit">Cadastrar</button>
                </form>
            </section>
        </main>
        <%- include('./partials/footer.ejs') %>
</body>

</html>