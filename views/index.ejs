<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Pokedex</title>
</head>

<body>
    <header>
        <h1>Pokedex</h1>
    </header>
    <main>

        <section id="cards">

            <% pokedex.forEach((pokemon) => { %>

                <div class="card">
                    <img src="<%= pokemon.imagem %>" alt="">
                    <h2>
                        <%= pokemon.nome%>
                    </h2>
                    <p class="descricao">
                        <%= pokemon.descricao %>
                    </p>
                    <p> Tipo:
                        <%= pokemon.tipo %>
                    </p>
                </div>
                <%  }) %>
        </section>

    </main>
</body>

</html>